From 39617db3ad15c33a1b4f0a3661d38a83ad9bc5b6 Mon Sep 17 00:00:00 2001
From: Joao Marcos Costa <joaomarcos.costa@bootlin.com>
Date: Fri, 12 Dec 2025 16:24:03 +0000
Subject: [PATCH] arm64: dts: imx93-11x11-evk: add description of Nunchuk on
 lpi2c1

Signed-off-by: Joao Marcos Costa <joaomarcos.costa@bootlin.com>
---
 arch/arm64/boot/dts/freescale/imx93-11x11-evk.dts | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/arch/arm64/boot/dts/freescale/imx93-11x11-evk.dts b/arch/arm64/boot/dts/freescale/imx93-11x11-evk.dts
index 09c4f189b543..a3af0e1db34e 100644
--- a/arch/arm64/boot/dts/freescale/imx93-11x11-evk.dts
+++ b/arch/arm64/boot/dts/freescale/imx93-11x11-evk.dts
@@ -434,12 +434,17 @@ &lpm {
 &lpi2c1 {
 	#address-cells = <1>;
 	#size-cells = <0>;
-	clock-frequency = <400000>;
+	clock-frequency = <100000>;
 	pinctrl-names = "default", "sleep";
 	pinctrl-0 = <&pinctrl_lpi2c1>;
 	pinctrl-1 = <&pinctrl_lpi2c1>;
 	status = "okay";
 
+	nunchuk: joystick@52 {
+	    compatible = "nintendo,nunchuk";
+	    reg = <0x52>;
+	};
+
 	codec: wm8962@1a {
 		compatible = "wlf,wm8962";
 		reg = <0x1a>;
-- 
